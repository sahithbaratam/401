<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background: #1ebc5a; /* Light gray background */
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .container {
      background: #ffffff; 
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 700px; /* Adjusted max-width */
      width: 100%;
      text-align: center;
      border: 2px solid #007bff; /* Added border */
    }
    h2 {
      color: #333;
      margin-bottom: 1rem;
      font-size: 2rem; /* Increased font size */
    }
    p {
      color: #555;
      margin-bottom: 2rem;
      font-size: 1.1rem; /* Increased font size */
    }
    button {
      padding: 0.75rem 1.5rem;
      background: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }
    button:hover {
      background: #0056b3;
    }
    input[type="text"] {
      width: calc(100% - 1.5rem);
      padding: 0.75rem;
      margin-bottom: 1rem;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 1rem; /* Increased font size */
    }
    @media (max-width: 768px) {
      .container {
        padding: 1.5rem;
      }
      h2 {
        font-size: 1.8rem; /* Adjusted font size */
      }
      p {
        font-size: 1rem; /* Adjusted font size */
      }
    }
    @media (max-width: 480px) {
      .container {
        padding: 1rem;
      }
      h2 {
        font-size: 1.5rem; /* Adjusted font size */
      }
      p {
        font-size: 0.9rem; /* Adjusted font size */
      }
    }
    .modal {
      display: block;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4); /* Semi-transparent black overlay */
    }
    .modal-content {
      background-color: #fefefe; /* White modal background */
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
      max-width: 500px;
      text-align: center;
      border-radius: 10px;
    }
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }
    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }
  </style>
  <script>
    window.onload = function() {
      document.getElementById("welcomeModal").style.display = "block";
    };

    function closeModal() {
      document.getElementById("welcomeModal").style.display = "none";
    }

    async function fetchWordDefinition() {
      const word = document.getElementById('word').value;
      const apiKey = '8+oo/7ItYsRHbBVc5T9HKw==cLFryGgU0PzrG8Cp';
      const response = await fetch(`https://api.dictionaryapi.dev/api/v2/entries/en/${word}`);
      const data = await response.json();

      if (response.ok) {
        const definition = data[0]?.meanings[0]?.definitions[0]?.definition || 'Definition not found.';
        document.getElementById('wordDefinition').innerHTML = `
          <h3>${word.charAt(0).toUpperCase() + word.slice(1)}</h3>
          <p><strong>Definition:</strong> ${definition}</p>
        `;
      } else {
        document.getElementById('wordDefinition').innerHTML = "<p>Word not found.</p>";
      }
    }
  </script>
</head>
<body>
  <div id="welcomeModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2>Welcome to Dictionary Portal</h2>
      <p>Explore the meanings of words!</p>
    </div>
  </div>
  <div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <div style="flex: 1;">
        <h2>DICTIONARY </h2>
        <p>Click here to logout</p>
        <form action="/logout" method="post">
          <button type="submit">Logout</button>
        </form>
      </div>
      <div style="flex: 1;">
        <h2>Search Word Definition</h2>
        <input type="text" id="word" placeholder="Enter word">
        <button type="button" onclick="fetchWordDefinition()">Search</button>
        <div id="wordDefinition" style="margin-top: 2rem;"></div>
      </div>
    </div>
  </div>
</body>
</html>
